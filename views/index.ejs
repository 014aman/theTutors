<body>
  <!-- Your existing HTML content here -->

  
  
  <% if(user && user.role=='tutor'){ %>
    <h1 style="margin-left: 10%; margin-top: 5%;">Welcome <%= user.name  %> !!</h1>
    <br>
    <ul>
      <li>
        <a class="nav-link" href="/addcourses" style="width: 20%;  font-size: xx-large; color: darkslategray; margin-left: 5%;"> Add Courses</a>
      </li>
      <br>
      <li>
        <a class="nav-link" href="/managecourses" style="width: 20%;font-size: xx-large; color: darkslategrey; margin-left: 5%;"> Manage Courses</a>
      </li>
    </ul>
    <% } else{%>
      <div class="banner">
        <h1 class="text-center" id="banner-text1" style="padding-bottom: 10px; ">Learn something new today</h1>
        <p class="text-center" id="banner-text2" style="padding-bottom: 10px;">Choose from our wide selection of courses</p>
      </div>
  <div class="container">
    <div class="text-center" style="margin-top: 40px; margin-bottom: 5px;">
      <h4 style="padding: 10px; margin-bottom: 15px; font-size: xx-large;">Categories of courses available.</h4>
    </div>

    
    <div class="row">
      <% for(let i=1 ; i<13 ; i++){ %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
          <div class="card mb-3">
            <div class="card-body">
              <h4 class="card-title">Class <%= i %></h4>
              
              <form method="get" action="/courses/<%= i %>">
                <button type="submit" class="btn btn-primary btn-block" value="Course <%= i  %>">View Course</button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
    </div>

    <% }%>

  <!-- Include footer and any other content here -->




<%- include("partials/footer")-%>
