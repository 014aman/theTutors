<%- include("partials/dynamicHeader") -%>
<link rel="stylesheet" href="/css/style_tutor.css">

<body>
  <h1>Video Library</h1>

  <!-- Form to add a new video -->
  <h2>Add New Video</h2>
  <form action="/videolibrary/<%= id %>" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required><br>

    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea><br>
    
  <label for="video">Video:</label>
  <input type="file" id="video" name="video" required><br>

    <input type="submit" value="Add Video">
  </form>

  <!-- Table to display existing videos -->
  
    <% if (videos) { %>
        <h2>Existing Videos</h2>
        <% if (videos.length > 0) { %>
          <table>
            <thead>
              <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Filename</th>
                <th>Video</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% videos.forEach(video => { %>
                <tr>
                  <td><%= video.title %></td>
                  <td><%= video.description %></td>
                  <td><%= video.filename %></td>
                  <td>
                    <video width="320" height="240" controls>
                        <source src="/uploads/<%= video.filename %>" type="<%= video.contentType %>">
                      Your browser does not support the video tag.
                    </video>
                  </td>
                  <td>
                    <a href="/videolibrary/<%= video._id %>/edit">Edit</a>
                    <a href="/videolibrary/<%= video._id %>/delete">Delete</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } %>
        <% } %>
        
</body>

<%- include("partials/footer") -%>
