<%- include("partials/header")-%>

<link rel="stylesheet" href="/css/checkout.css">

<h1>Checkout</h1>

<div class="checkout-container">
  <div class="checkout-item">
    <!-- <img src="/images/product1.jpg" alt="Product 1"> -->

    <div class="row">
        <div class="col-6 col-sm-4"><h3>Course : </h3></div>
        <div class="col-6 col-sm-4"><h3><%= person.courseName %></h3></div>
      
        <!-- Force next columns to break to new line at md breakpoint and up -->
        <div class="w-100 d-none d-md-block"></div>
      
        <div class="col-6 col-sm-4"><h3>Tutor :</h3></div>
        <div class="col-6 col-sm-4"><h3> <%= person.name %></h3></div>

        <!-- Force next columns to break to new line at md breakpoint and up -->

        <div class="w-100 d-none d-md-block"></div>
      
        <div class="col-6 col-sm-4"><h4>Price:</h4> </div>
        <div class="col-6 col-sm-4"><h4>Rs.<%= person.fees %></h4></div>
      </div>

    <div class="checkout-item-details">
      
      
      
    </div>
  </div>

  <form class="payment-form">
    <div class="form-group">
      <label for="card-number">Card Number</label>
      <input type="text" id="card-number" name="card-number" required>
    </div>

    <div class="form-group">
      <label for="card-holder">Card Holder</label>
      <input type="text" id="card-holder" name="card-holder" required>
    </div>

    <div class="form-group">
      <label for="expiry-date">Expiry Date</label>
      <input type="text" id="expiry-date" name="expiry-date" required>
    </div>

    <div class="form-group">
      <label for="cvv">CVV</label>
      <input type="text" id="cvv" name="cvv" required>
    </div>

    <button type="submit" class="btn ">Pay Now</button>
  </form>
</div>

<%- include("partials/footer")-%>
